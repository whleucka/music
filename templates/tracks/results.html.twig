{% if tracks and term %}
{% for track in tracks %}
    <div id="{{ track.hash }}" class="track-row d-flex truncate" hx-get="/tracks/play/{{ track.hash }}" hx-swap="none" hx-trigger="click" title="{{ track.artist|raw }} - {{ track.title|raw }}">
        <span class="cover"></span>
        <span class="title flex-grow-1 truncate">{{ track.artist|raw }} - {{ track.title|raw }}</span>
        <span class="playtime">{{ track.playtime_string }}</span>
    </div>
{% endfor %}
{% elseif term %}
    <em>No search results for '{{ term }}'</em>
{% endif %}
