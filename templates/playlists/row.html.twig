<div class="d-flex align-items-center truncate w-100">
    <span class="flex-grow-1 truncate">{{ playlist.name}}</span>
    <div class="pt-1">
        <button class="btn btn-sm btn-primary" hx-get="/playlists/play/{{ playlist.uuid }}">Play</button>
        <button class="btn btn-sm btn-danger ms-1" hx-confirm="Are you sure you want to delete this playlist?" hx-get="/playlists/delete/{{ playlist.uuid }}">Delete</button>
    </div>
</div>
