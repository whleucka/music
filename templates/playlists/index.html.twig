{% extends "layout/app.html.twig" %}

{% block view %}
    <section id="playlists" class="h-100 scroll-cont">
        <div class="header bg-lush bg-wave">
            <h2 class="p-2 fw-bold"><i class="bi bi-file-earmark-music"></i> Playlists</h2>
            <div class="p-2">{% include "playlists/control.html.twig" %}</div>
        </div>
        <div id="load" class="p-2" hx-indicator="#content-loader" hx-get="/playlists/load" hx-trigger="load, playlists from:body"></div>
    </section>
{% endblock %}
