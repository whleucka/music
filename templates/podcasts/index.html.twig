{% extends "layout/app.html.twig" %}

{% block view %}
    <section id="podcasts" class="h-100 scroll-cont">
        <div class="header bg-orange">
            <h2 class="p-2 fw-bold"><i class="bi bi-mic"></i> Podcasts</h2>
        </div>
        <div id="load" class="p-2" hx-get="/podcasts/load" hx-trigger="load, podcasts from:body"></div>
        <div id="content-loader" class="htmx-indicator d-flex justify-content-center align-items-center w-100 p-3">
            <img src="/images/sonic.gif" alt="loading" />
        </div>
    </section>
{% endblock %}
